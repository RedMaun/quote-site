<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="../public/css/main.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.3/jquery.min.js"></script>
    <script src="../public/js/images-grid.js"></script>
    <link rel="stylesheet" href="../public/css/images-grid.css">
    <link rel="stylesheet" href="../public/css/dark.css">
    <link rel="shortcut icon" href="logo.png" type="image/png">
</head>
<body>
    <div id="headd">
        <div id="textcont">СЬЛРЖАЛСЧ цитатник</div>
    </div>
    <div id="butt-cont"></div>
    <a href="https://github.com/RedMaun/quote-site"><button id="github">
        <img src="https://raw.githubusercontent.com/gilbarbara/logos/master/logos/github-icon.svg">
    </button></a>
    <div id="space"></div>
    <div id="nigga_fart">
        <a style="display:block; text-decoration: none; color: white !important; text-align: center; font-size: 2.5em" href="/">СЬЛРЖАЛСЧ</a>
        <a style="display:block; text-decoration: none; color: white !important; text-align: center; margin-bottom: 20px; font-size: 1em" href="/">цитатник</a>
    </div>
    <div class="slideshow-container">

        <div class="mySlides fade">
        {{!-- <div class="numbertext">1 / 3</div> --}}
        <img src="../public/banners/1.webp">
        {{!-- <div class="text">Caption Text</div> --}}
        </div>

        <div class="mySlides fade">
        <img src="../public/banners/2.webp">
        {{!-- <div class="text">Caption Two</div> --}}
        </div>

        <div class="mySlides fade">
        <img src="../public/banners/3.webp">
        {{!-- <div class="text">Caption Three</div> --}}
        </div>
        <div class="mySlides fade">
        <img src="../public/banners/4.webp">
        {{!-- <div class="text">Caption Three</div> --}}
        </div>
        <div class="mySlides fade">
        <img src="../public/banners/5.webp">
        {{!-- <div class="text">Caption Three</div> --}}
        </div>

    </div>

    <div id="space"></div>
    <div id="feed">
        {{#each list}}
        <div class="cont">
            <div class="title-row">
                <a class="id" href="/{{@root.title}}/{{plus @root.offset (minus (minus (length @root.list) 1) @index)}}">#{{plus @root.offset (minus (minus (length @root.list) 1) @index)}}</a>
                <div class="date">{{da}}</div>
            </div>
            <div class="content">
                {{#if audio}}
                <div class="nname-cont">
                    <audio controls class="au" >
                        <source src="{{audio}}" type="audio/mp3">
                    </audio>
                </div>
                
                {{else}}
                    {{#if (isArray qu)}} 
                        {{#each qu}}
                            {{#if (isObject this)}}
                                <div class="nname-cont" style="margin-left:{{gap}}px">  
                                        {{#if (eq gap 0)}}
                                            {{#if element.name}}
                                                <a href="{{element.link}}" class="nname" style="display: inline-block">{{element.name}}</a>
                                            {{/if}}
                                            {{#if element.text}}
                                                <div class="el-text"style="display: inline-block;height: auto; display: block; white-space: pre-line; font-size: 16px !important;">{{element.text}}</div>
                                            {{/if}}
                                            {{#if element.audio}}
                                                <audio controls class="au" >
                                                    <source src="{{element.audio}}" type="audio/mp3">
                                                </audio>
                                            {{/if}}
                                            {{#if element.images}}
                                                <div class="gallery" style="margin-top: 5px;" id="{{_id}}">{{#each element.images}}<div style="color: transparent">{{this}}</div>{{/each}}</div>
                                            {{/if}}
                                        {{else}}
                                            {{#if element.name}}
                                                <a class="nname" href="{{element.link}}" style="display: inline-block;">{{element.name}}</a>
                                            {{/if}}
                                            {{#if element.text}}
                                                <div class="el-text" style="display: block; height: auto; display: block; white-space: pre-line; font-size: 16px !important;">{{element.text}}</div>
                                            {{/if}}
                                            {{#if element.audio}}
                                                <audio controls class="au" >
                                                    <source src="{{element.audio}}" type="audio/mp3">
                                                </audio>
                                            {{/if}}
                                            {{#if element.images}}
                                                <div class="gallery" style="margin-top: 5px;" id="{{_id}}">{{#each element.images}}<div style="color: transparent">{{this}}</div>{{/each}}</div>
                                            {{/if}}
                                        {{/if}}
                                    </div>
                            {{else}}
                                <div class="nname-cont" style="padding-bottom: 0px;"><p class="el-text" style="display: inline-block;height: auto; display: block; white-space: pre-line; font-size: 16px !important;">{{this}}</p></div>
                            {{/if}}
                        {{/each}}
                    {{else}}
                        {{#if (not (eq (length qu) 0))}}
                            {{#if images}}
                                <div class="el-text" style="white-space: pre-line !important; padding-bottom: 5px;font-size: 16px !important;">{{qu}}</div>
                            {{else}}
                                <div class="el-text" style="padding-bottom: 20px; display: inline-block;height: auto; display: block; white-space: pre-line; font-size: 16px !important;">{{qu}}</div>
                            {{/if}}
                        {{/if}}
                    {{/if}}
                {{/if}}
                {{#if images}}
                    <div class="gallery" style="padding-bottom: 20px;"id="{{minus (minus (length @root.list) 1) @index}}">{{#each images}}<div style="color: transparent">{{this}}</div>{{/each}}</div>
                {{/if}}
            </div>
            <div class="bottom-row">
                {{#if link}}
                <a href="{{link}}" class="author">- {{au}}</a>
                {{else}}
                <div class="author">- {{au}}</div>
                {{/if}}
            </div>
        </div>
        {{/each}}
        {{#if (not (eq @root.offset 0))}}
            <a style="display: block; text-align:center;margin-bottom: 40px; margin-top: 40px;"id="all" href="">Показать больше</a>
        {{/if}}
    </div>
    <script src="../public/js/main.js"></script>
    <script>
        var url = window.location.href
        var arr = url.split('/');
        var ele = arr[arr.length - 1]
        arr.pop()
        arr.push('all')
        arr.push(ele)
        url = arr.join('/');
        document.getElementById("all").href = url;    
    </script>
</body>
</html>