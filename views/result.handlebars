<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="../public/css/main.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.3/jquery.min.js"></script>
    <script src="../public/js/images-grid.js"></script>
    
    <link rel="stylesheet" href="../public/css/images-grid.css">
    <link rel="stylesheet" href="../public/css/dark.css">
</head>
<body>
    <a id="back-link" href="/">
        <button id="back" type="submit">Назад</button>
    </a>
    <div id="feed">
        <div id="space"></div>
        {{#each list}}
        <div class="cont">
            <div class="title-row">
                <a class="id" href="/{{@root.chat}}/{{@root.title}}">#{{@root.title}}</a>
                <div class="date">{{da}}</div>
            </div>
            <div class="content">
                {{#if audio}}
                <div class="nname-cont">
                    <audio controls class="au" >
                        <source src="{{audio}}" type="audio/mp3">
                    </audio>
                </div>
                
                {{else}}
                    {{#if (isArray qu)}} 
                        {{#each qu}}
                            {{#if (isObject this)}}
                                <div class="nname-cont" style="margin-left:{{gap}}px">  
                                        {{#if (eq gap 0)}}
                                            {{#if element.name}}
                                                <a href="{{element.link}}" class="nname" style="display: inline-block">{{element.name}}</a>
                                            {{/if}}
                                            {{#if element.text}}
                                                <div class="el-text"style="display: inline-block;height: auto; display: block; white-space: pre-line; font-size: 16px !important;">{{element.text}}</div>
                                            {{/if}}
                                            {{#if element.audio}}
                                                <audio controls class="au" >
                                                    <source src="{{element.audio}}" type="audio/mp3">
                                                </audio>
                                            {{/if}}
                                            {{#if element.images}}
                                                <div class="gallery" style="margin-top: 5px;" id="{{_id}}">{{#each element.images}}<div style="color: transparent">{{this}}</div>{{/each}}</div>
                                            {{/if}}
                                        {{else}}
                                            {{#if element.name}}
                                                <a class="nname" href="{{element.link}}" style="display: inline-block;">{{element.name}}</a>
                                            {{/if}}
                                            {{#if element.text}}
                                                <div class="el-text" style="display: block; height: auto; display: block; white-space: pre-line; font-size: 16px !important;">{{element.text}}</div>
                                            {{/if}}
                                            {{#if element.audio}}
                                                <audio controls class="au" >
                                                    <source src="{{element.audio}}" type="audio/mp3">
                                                </audio>
                                            {{/if}}
                                            {{#if element.images}}
                                                <div class="gallery" style="margin-top: 5px;" id="{{_id}}">{{#each element.images}}<div style="color: transparent">{{this}}</div>{{/each}}</div>
                                            {{/if}}
                                        {{/if}}
                                    </div>
                            {{else}}
                                <div class="nname-cont" style="padding-bottom: 0px;"><p class="el-text" style="display: inline-block;height: auto; display: block; white-space: pre-line; font-size: 16px !important;">{{this}}</p></div>
                            {{/if}}
                        {{/each}}
                    {{else}}
                        {{#if (not (eq (length qu) 0))}}
                            {{#if images}}
                                <div class="el-text" style="white-space: pre-line !important; padding-bottom: 5px;font-size: 16px !important;">{{qu}}</div>
                            {{else}}
                                <div class="el-text" style="padding-bottom: 20px; display: inline-block;height: auto; display: block; white-space: pre-line; font-size: 16px !important;">{{qu}}</div>
                            {{/if}}
                        {{/if}}
                    {{/if}}
                {{/if}}
                {{#if images}}
                    <div class="gallery" style="padding-bottom: 20px;"id="{{minus (minus (length @root.list) 1) @index}}">{{#each images}}<div style="color: transparent">{{this}}</div>{{/each}}</div>
                {{/if}}
            </div>
            <div class="bottom-row">
                {{#if link}}
                <a href="{{link}}" class="author">- {{au}}</a>
                {{else}}
                <div class="author">- {{au}}</div>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
    <script src="../public/js/main.js"></script>
    <script>
        var url = window.location.href
        var arr = url.split('/');
        arr.pop();
        url = arr.join('/');
        document.getElementById("back-link").href = url;    
    </script>
</body>
</html>